[MASTER]
ignore=tests, story_tests, util.py

[MESSAGES CONTROL]
# Disable specific warnings
disable=
    missing-docstring,
    invalid-name,
    too-few-public-methods,
    no-self-use,
    broad-exception-caught,
    inconsistent-return-statements

[FORMAT]
# Maximum number of characters on a single line
max-line-length=100

# Number of spaces for indentation
indent-string='    '
indent-after-paren=4

[BASIC]
# Variable naming conventions
variable-rgx=[a-z_][a-z0-9_]{2,30}$

# Argument naming conventions
argument-rgx=[a-z_][a-z0-9_]{2,30}$

# Function naming conventions
function-rgx=[a-z_][a-z0-9_]{2,30}$

[DESIGN]
# Maximum number of arguments for a function/method
max-args=10

# Maximum number of positional arguments
max-positional-arguments=10

# Maximum number of attributes in a class
max-attributes=10

[LOGGING]
# Format style used for logging (e.g., old style "%s" or new style "{}")
logging-format-style=new

[REPORTS]
# Disable pylint's overly verbose report output
reports=no
