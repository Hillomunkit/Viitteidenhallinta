[MASTER]
ignore=tests, story_tests, util.py

[MESSAGES CONTROL]
# Disable specific warnings
disable=
    missing-docstring,
    invalid-name,
    too-few-public-methods,
    no-self-use,
    broad-except,
    broad-exception-caught,
    inconsistent-return-statements,
    redefined-builtin

[FORMAT]
# Maximum number of characters on a single line
max-line-length=100

# Number of spaces for indentation
indent-string='    '
indent-after-paren=4

[BASIC]
# Variable naming conventions
variable-rgx=[a-z_][a-z0-9_]{2,30}$

# Argument naming conventions
argument-rgx=[a-z_][a-z0-9_]{2,30}$

# Function naming conventions
function-rgx=[a-z_][a-z0-9_]{2,30}$

[DESIGN]
# Maximum number of arguments for a function/method
max-args=15

# Maximum number of positional arguments
max-positional-arguments=20

# Maximum number of attributes in a class
max-attributes=15

# Maximum number of local variables in a function/method
max-locals=20

# Maximum number of statements in a function/method
max-statements=60

[LOGGING]
# Format style used for logging
logging-format-style=new

[REPORTS]
reports=no
